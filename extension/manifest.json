{
  "manifest_version": 3,
  "name": "Nebula",
  "version": "1.0",
  "description": "Nebula is a tool that helps you passively create a knowledge graph from your study session browsing.",
  "permissions": ["storage", "activeTab", "scripting", "tabs"],
  "minimum_chrome_version": "138",
  "host_permissions": ["https://*.gradescope.com/*", "https://openstax.org/*", "<all_urls>", "https://generativelanguage.googleapis.com/*","http://localhost:8000/*"],
  "background": { "service_worker": "background.js" },
  "content_scripts": [
    {
      "matches": ["https://*.gradescope.com/*", "https://openstax.org/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["<all_urls>"],
      "js": ["selection-portal.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Nebula"
  },
  "options_ui": { "page": "options.html" },
  "web_accessible_resources": [{
    "resources": ["icon.png"],
    "matches": ["<all_urls>"]
  }]
}
